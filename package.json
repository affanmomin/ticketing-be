{
  "name": "code-companion-node-ts-template",
  "version": "1.0.0",
  "description": "Template for fastify apps",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -e ts,json,env --exec ts-node --files -r dotenv/config src/index.ts",
    "test": "LOG_LEVEL=error node -r dotenv/config -r ts-node/register --test src/**/*.test.ts",
    "lint": "biome lint src",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down -v",
    "db:seed": "ts-node -r dotenv/config scripts/seed.ts",
    "db:init": "ts-node -r dotenv/config scripts/init-db.ts",
    "db:create-admin": "ts-node -r dotenv/config scripts/create-admin.ts",
    "docker:build": "docker build --build-arg PORT=3000 -t code-companion-node-ts-template .",
    "docker:run": "docker run -p  code-companion-node-ts-template",
    "test:routes": "ts-node -r dotenv/config scripts/test-all-routes.ts"
  },
  "keywords": [],
  "author": "Niels Van den broeck",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/nodemailer": "^7.0.3",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.5.0",
    "node-test-junit-reporter": "^2.0.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.914.0",
    "@aws-sdk/s3-request-presigner": "^3.920.0",
    "@fastify/autoload": "^6.3.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.0.0",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.1.12"
  }
}
